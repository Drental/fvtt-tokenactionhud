
<div id="{{id}}" style="top: {{top}}; left: {{left}}; {{~#if background~}}background: {{background}};{{~/if~}} transform: scale({{scale}}); transform-origin: top left">
    {{~#if actions.actorId~}}
    {{~#if actions.hudTitle~}}
    <div id="tah-character-name">{{actions.hudTitle}}</div>
    {{~/if~}}
    <div id="tah-reposition"><i class="fas fa-arrows-alt"></i></div>
      <div id="tah-categories">
      {{#each actions.categories}}
      {{>"modules/token-action-hud/templates/category.hbs" background=../background}}
      {{/each}}
      {{#unless hovering}}
      </div>
    <div id="tah-buttons">
      <button id="tah-unlock">
        <i class="fa fa-lock"></i>
      </button>
      <button id="tah-lock" class="tah-hidden">
        <i class="fa fa-lock-open"></i>
      </button>
      <button id="tah-edit-categories" class="tah-hidden">
        <i class="fa fa-book"></i>
      </button>
    </div>
    {{/unless}}
    {{~/if~}}
</div>
